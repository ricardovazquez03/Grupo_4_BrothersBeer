
<%- include("./partials/header") %>
 <body>
    <div class="formulario-registro">
    <a href="/MiCuenta" class="exit"> <i class="fas fa-arrow-circle-left" style="margin-top: 5%;"></i></a>
    <div class="main-container-registro">
    <div class="container-register">
        <form action="/nuevo" method="POST" enctype="multipart/form-data">
            <h1>Formulario para nuevos productos</h1>
            <br>
            <label for="item">Nombre del producto</label>
            <input class="item" type="text" name="nombre" id="nombre" placeholder="Nuevo producto" required>
            <label for="type">Tipo de producto</label>
            <select class="item1" name="categoria" id="categoria" required>
                <option selected value="" Elige>Elige</option>
                <option value="Cerveza">Cerveza</option>
                <option value="Cóctel">Cóctel</option>
            </select>
            <label for="description">Descripcion del producto</label>
            <textarea class="item" name="description" id="description"></textarea>
            <label for="imagen"> Imagen para el producto</label>
            <input class="item" type="file" name="imagen" id="imagen"required>
            <label for="score">Puntuación</label>
            <select class="item1" name="puntuacion" id="puntuacion" required>
                <option selected value="">Elige</option>
                <option value="0.5">0.5</option>
                <option value="1">1</option>
                <option value="1.5">1.5</option>
                <option value="2">2</option>
                <option value="2.5">2.5</option>
                <option value="3">3</option>
                <option value="3.5">3.5</option>
                <option value="4">4</option>
                <option value="4.5">4.5</option>
                <option value="5">5</option>
            </select>
            <label for="price">Precio del producto</label>
            <input class="item" type="number" name="precio" id="precio" placeholder="Digita el precio del producto" min="0" required>
            <button class="button1" type="submit" value="Submit"> Crear producto</button> 
            <button class="button1" type="reset" value="reset">Vaciar formulario</button>
        </form>
        </div>
        </div>
        </div>
 </body>

